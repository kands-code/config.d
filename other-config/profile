#! /usr/bin/env bash

# git gpg
export GPG_TTY=$(tty)
#mysql history
export MYSQL_HISTFILE="$XDG_DATA_HOME"/mysql_history
# path
export PATH="$PATH":"$HOME/.local/bin":"$HOME/.local/share/npm/bin":"$HOME/.local/share/cabal/bin":"$HOME/.local/share/cargo/bin"

[ -f "/home/kands/.local/share/ghcup/env" ] && source "/home/kands/.local/share/ghcup/env" # ghcup-env

# opam configuration
test -r /home/kands/.local/share/opam/opam-init/init.sh && . /home/kands/.local/share/opam/opam-init/init.sh > /dev/null 2> /dev/null || true

systemctl --user import-environment PATH
